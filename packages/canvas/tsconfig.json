{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./lib",
    "lib": ["ES6",  "DOM"],
    "types": []
  },
  "include": ["src/**/*"]
}
